<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/colorLightGray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Order ID -->
            <TextView
                android:id="@+id/txv_orderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID: #12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:paddingBottom="4dp"
                tools:ignore="HardcodedText" />

            <!-- Order Cost -->
            <TextView
                android:id="@+id/txv_orderCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Cost: KES 1500"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:paddingBottom="4dp"
                tools:ignore="HardcodedText" />

            <!-- Mpesa Code -->
            <TextView
                android:id="@+id/txv_mpesaCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mpesa Code: QWE123XY"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:paddingBottom="4dp"
                tools:ignore="HardcodedText" />

            <!-- Order Date -->
            <TextView
                android:id="@+id/txv_orderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Date: 2025-05-01"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:paddingBottom="4dp"
                tools:ignore="HardcodedText" />

            <!-- Order Status -->
            <TextView
                android:id="@+id/txv_orderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Delivered"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:paddingBottom="4dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
