<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Order ID -->
            <TextView
                android:id="@+id/txv_orderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: 001"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <!-- Client Name -->
            <TextView
                android:id="@+id/txv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Client Name: John Doe"
                android:textColor="#555555"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>

            <!-- Order Cost -->
            <TextView
                android:id="@+id/txv_orderCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Order Cost: KES 5000"
                android:textColor="#555555"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>

            <!-- Mpesa Code -->
            <TextView
                android:id="@+id/txv_mpesaCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Mpesa Code: ABC123"
                android:textColor="#555555"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>

            <!-- Order Date -->
            <TextView
                android:id="@+id/txv_orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Order Date: 2025-05-03"
                android:textColor="#555555"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>

            <!-- Order Status -->
            <TextView
                android:id="@+id/txv_orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Status: Pending"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
