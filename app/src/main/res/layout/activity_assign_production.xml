<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Staff.Store_mrg.AssignProduction">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spacing="16dp">

        <!-- ðŸ­ Production Details Heading -->
        <TextView
            android:text="ðŸ­ Production Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:text="Select Product to Produce"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Quantity to be Produced"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_produce_quantity"
                    android:inputType="numberDecimal"
                    android:hint="e.g. 100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Batch Number"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_batch_no"
                    android:hint="e.g. B123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Production Date"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true" />

                <EditText
                    android:id="@+id/edt_production_date"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ðŸ§¾ Raw Materials Selection Section -->
        <TextView
            android:text="ðŸ“¦ Select Raw Materials"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:text="Select Raw Material"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Enter Quantity"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/input_quantity"
                    android:inputType="numberDecimal"
                    android:hint="e.g. 2.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Select Unit"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_add"
                    android:text="âž• Add to List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0288D1"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:text="Materials List:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_submit"
            android:text="âœ… Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
</ScrollView>
