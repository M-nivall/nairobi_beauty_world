<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".Staff.Trainer.ViewAttendance">

    <!-- Header section for Session Details -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#EEEEEE"
        android:padding="10dp">

        <!-- Main Heading -->
        <TextView
            android:id="@+id/txtMainHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Attendance List"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:padding="10dp"
            android:background="#D1C4E9" />

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginBottom="10dp"/>

        <!-- Session ID -->
        <TextView
            android:id="@+id/txtSessionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Session ID"
            android:textColor="@android:color/black" />

        <!-- Topic -->
        <TextView
            android:id="@+id/txtTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Topic"
            android:textColor="@android:color/black" />

        <!-- Session Date -->
        <TextView
            android:id="@+id/txtSessionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Session Date"
            android:textColor="@android:color/black" />

    </LinearLayout>


    <!-- Header section for Trainee ID and Full Name -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp">

        <!-- Trainee ID Heading -->
        <TextView
            android:id="@+id/txtTraineeIdHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trainee ID"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:background="#E0E0E0" />

        <!-- Trainee Name Heading -->
        <TextView
            android:id="@+id/txtTraineeNameHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Full Name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:background="#F0F0F0" />
    </LinearLayout>

    <!-- RecyclerView for displaying trainee attendance -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp" />

</LinearLayout>