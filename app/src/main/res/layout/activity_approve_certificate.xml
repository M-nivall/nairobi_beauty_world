<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.ServMrg.ApproveCertificate">


    <!-- Card for Trainee Details -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTraineeDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTraineeDetailsHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainee Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewTraineeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Trainee ID: "/>

            <TextView
                android:id="@+id/textViewTraineeNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Name: "/>

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="Status: To Graduate"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Grades -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGrades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewTraineeDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewGradesHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grades"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/textViewAssignMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Exam Marks: "/>

            <TextView
                android:id="@+id/textViewExamMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Exam Marks: "/>

            <TextView
                android:id="@+id/textViewPracticalMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Practical Marks: "/>

            <TextView
                android:id="@+id/textViewFinalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Final Score: "/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button to Submit -->
    <Button
        android:id="@+id/buttonApproveLicence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Approve Certificate"
        android:background="@color/btn_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cardViewGrades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>