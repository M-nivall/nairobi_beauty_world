<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.Supervisor.TrackItems"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section Title for Product Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:paddingBottom="8dp" />

        <!-- Product Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_batch_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batch No"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_produce_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_production_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Production Date"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_production_tech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technician"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_tell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone No"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txt_production_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#00695C"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Title for Materials -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Materials Used"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:paddingBottom="8dp" />

        <!-- Materials Table Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <TableLayout
                android:id="@+id/table_materials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:textColor="#444444"
                android:divider="#CCCCCC"
                android:showDividers="middle" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/card_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approve Products"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/txt_final_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produced Quantity"
                    android:textColor="#00695C"
                    android:textSize="16sp" />

                <!-- Approve Button -->
                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Completion"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>