<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Centered Heading Text -->
        <TextView
            android:id="@+id/txv_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Module Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="8dp" />

        <!-- Content section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_module"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_soft_gray_rounded">

            <TextView
                android:id="@+id/txvSubjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:paddingVertical="6dp" />

        </LinearLayout>

        <!-- Optional Icon (hidden by default) -->
        <ImageView
            android:id="@+id/img_ic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ea_logo"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
