<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Clients.GetCertificate">

    <Button
        android:id="@+id/btn_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Certificate Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Logo -->
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/beauty_bg"
                android:contentDescription="Logo"
                android:layout_marginBottom="8dp" />

            <!-- College Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAIROBI BEAUTY WORLD"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Certificate Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CERTIFICATE OF COMPLETION"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#4A148C" />

            <!-- Intro Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is to certify that"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name Here"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:layout_marginTop="8dp"
                android:fontFamily="serif" />



            <!-- Completion Statement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="has successfully completed the required training in"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="8dp" />

            <!-- Course Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beauty and Makeup"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:layout_marginTop="4dp" />

            <!-- Certificate Number -->
            <TextView
                android:id="@+id/tv_certificateNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certificate No: NB/123456"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

                <!-- Director Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Signature Image -->
                    <ImageView
                        android:id="@+id/director_signature_image"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/sample_signature" />

                    <!-- Line -->
                    <TextView
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="______________________"
                        android:textColor="#000000" />

                    <!-- Director Name -->
                    <TextView
                        android:id="@+id/director_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Director: Jane Muthoni"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <!-- Issued Date Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="22dp">

                    <TextView
                        android:id="@+id/txv_issue_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/05/2025"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Line -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="______________________"
                        android:textColor="#000000" />

                    <!-- Issued Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issued Date"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
